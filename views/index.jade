extends layout

block content
    .container
        header.main-header
            // <div id="loading">Loading...</div>
            // <div id="loaded" class="not-visible"></div>
            a.logo(href='/', target='_blank')
                .img-wrapper
                    img(src='img/logo.png', alt='logo')
            #user-signed-in.not-visible
                #user-info
                    #photo-container
                        img#photo(src=(user.photoURLInternal ? user.photoURLInternal : "img/user.ico" ))
                    #name= user.displayNameInternal
                    // <div id="email"></div>
                    .clearfix
            p
                button#sign-out Sign Out
                // <button id="delete-account">Delete account</button>
        .main-section
            .table-responsive
                table.table.table-striped.table-hover
                    thead
                        tr
                            th #
                            th Первое
                            th Гарнир
                            th Мясное
                            th Салат
                            th Всё
                            th Без первого
                    tbody
                        tr#today
                            td(style='vertical-align: middle;')
                                p= order.date
                            td
                                .checkbox
                                    label
                                        if order.mainDish.status
                                            input.dish-item.main-dish(type='checkbox', data-date='today', data-type='mainDish', value=order.mainDish.name, checked)
                                        else
                                            input.dish-item.main-dish(type='checkbox', data-date='today', data-type='mainDish', value=order.mainDish.name)
                                        p.dish= order.mainDish.name
                            td
                                .checkbox
                                    label
                                        if order.sideDish.status
                                            input.dish-item(type='checkbox', data-date='today', data-type='sideDish', value=order.sideDish.name, checked)
                                        else
                                            input.dish-item(type='checkbox', data-date='today', data-type='sideDish', value=order.sideDish.name)
                                        p.dish= order.sideDish.name
                            td
                                .checkbox
                                    label
                                        if order.meat.status
                                            input.dish-item(type='checkbox', data-date='today', data-type='meat', value=order.meat.name, checked)
                                        else
                                            input.dish-item(type='checkbox', data-date='today', data-type='meat', value=order.meat.name)
                                        p.dish= order.meat.name
                            td
                                .checkbox
                                    label
                                        if order.salad.status
                                            input.dish-item(type='checkbox', data-date='today', data-type='salad', value=order.salad.name, checked)
                                        else
                                            input.dish-item(type='checkbox', data-date='today', data-type='salad', value=order.salad.name)
                                        p.dish= order.salad.name
                            td
                                .checkbox
                                    label
                                        input.order-all(data-date='today', type='checkbox')
                            td
                                .checkbox
                                    label
                                        input.order-all-except-main(data-date='today', type='checkbox')
        #user-signed-out.not-visible
            #firebaseui-container
    script(src='https://cdn.socket.io/socket.io-1.4.5.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/trianglify/0.4.0/trianglify.min.js')
    script(src='https://www.gstatic.com/firebasejs/3.6.1/firebase.js')
    script(src='js/config.js')
    script(src='https://www.gstatic.com/firebasejs/ui/live/1.0/firebase-ui-auth.js')
    script(src='js/auth.js')
    script(src='js/main.js')

